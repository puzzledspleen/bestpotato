name: Add Form-Submitted Issues to Project

on:
  issues:
    types:
      - labeled

jobs:
  add_to_project:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Add Issue to Project
        if: contains(github.event.issue.labels.*.name, 'Submitted via Form')
        run: |
          ISSUE_NUMBER=$(jq -r .issue.number "$GITHUB_EVENT_PATH")
          COLUMN_ID="1234567"  # Replace with the actual column ID

          echo "Adding issue #$ISSUE_NUMBER to project column $COLUMN_ID"
          
          # Use curl or other tools to send the API request
